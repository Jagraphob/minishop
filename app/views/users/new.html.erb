<% provide(:title, 'Sign Up') %>

<%= render 'layouts/navbar_main', disabled_link: 'signup' %>

<div class="signup-background">
  <div class="container">
    <div class="content-wrapper">
      <h1>Join Minishop</h1>
      <div>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active">Step 1: Account Information</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled">Step 2: Customer Information</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled">Step 3: Properties Information</a>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-6">
          <div class="signup-form">
            <%= render 'layouts/flash' %>      
            <%= render 'form', user: @user %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
