<% provide(:title, 'Sign Up') %>

<%= render 'layouts/signup_tabs', enabled_tab: 3 %>
<div class="row signup-form">
  <div class="col-6">
    <h3>Add a property</h3>  
    <%= render 'layouts/flash' %>      
    <%= render 'form' %>
  </div>
  <div class="col-6">
    <h3>Added Properties</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Number</th>
          <th scope="col">Street</th>
          <th scope="col">City</th>
        </tr>
      </thead>
      <tbody>
        <% @customer.properties.each do |property| %>
          <tr>
            <td><%= property.number %></td>
            <td><%= property.street_name %></td>
            <td><%= property.city %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Next >', signup_customer_path(@customer), role: 'button', class: 'btn btn-success' %>
  </div>
</div>
