<% provide(:title, 'Sign Up') %>

<%= render 'layouts/navbar_main', disabled_link: 'signup' %>

<div class="container">
  <div class="content-wrapper">
    <h1>Join Minishop</h1>
    <div>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link disabled">Step 1: Customer Information</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled">Step 2: Account Information</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active">Step 3: Properties Information</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled">Step 4: Confirmation</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="row signup-form">
    <div class="col-6">
      <h3>Add a property</h3>  
      <%= render 'layouts/flash' %>      
      <%= render 'form' %>
    </div>
    <div class="col-6">
      <h3>Added Properties</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">Street</th>
            <th scope="col">City</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.properties.each do |property| %>
            <tr>
              <td><%= property.number %></td>
              <td><%= property.street_name %></td>
              <td><%= property.city %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= button_to 'Next >', signup_customer_path(@customer), method: 'get', class: 'btn btn-success' %>
    </div>
  </div>
</div>
