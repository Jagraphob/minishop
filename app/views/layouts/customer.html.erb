<!DOCTYPE html>
<html>
  <head>
    <title>Minishop | <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <%= fa_icon "bolt"%> Minishop
        </a>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Home", customer_path(@customer), class: "nav-link disabled"%>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: 'delete', class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>