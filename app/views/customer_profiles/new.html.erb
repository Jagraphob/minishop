<% provide(:title, 'Sign Up') %>

<%= render 'navbar' %>

<div class="signup-background">
  <div class="container">
    <div class="content-wrapper">
      <h1>Join Minishop</h1>
      <div>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link disabled">Step 1: Account Information</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active">Step 2: Customer Information</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled">Step 3: Properties Information</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <div id="signup-form">
          <%= render 'layouts/flash' %>      
          <%= form_with model: @customer_profile, :local => true do |f| %>
            <div class="form-group">
              <%= f.label :phone_number %>
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :card_number %>
              <%= f.text_field :card_number, class: 'form-control' %>
            </div>
            <%= f.hidden_field :user_id %>
            <%= f.submit "Continue", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
